<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- ðŸŽ¯ Package-specific logger for your entire framework -->
	<logger name="com.darkuros.selenium" level="DEBUG" />

	<!-- ðŸ§ª Console Appender -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<!-- ðŸ“‚ File Appender with Time-Based Rolling -->
	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/framework.log</file>

		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/framework.%d{yyyy-MM-dd_HH-mm-ss}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>100MB</totalSizeCap>
		</rollingPolicy>

		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} -
				%msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<!-- ðŸš¨ Root logger fallback -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
		<appender-ref ref="FILE" />
	</root>

</configuration>